<div class="row tb-product">
<div class="col-sm-9">
<div>
	<div class="col-sm-4">
		<%= image_tag(@product.upload_image, class:'image-show') %>
	</div>
	<div class="col-sm-8">
		<table class="table">
		    <thead>
		      <tr>
		      	<td>
		      		<h3><%= @product.title %></h3>
		      	</td>
		      </tr>
		    </thead>
		    <tbody>
		      <tr >
		      	<td>
		        	<div class="list_description Price">
						<strong>Giá: </strong><%= @product.price %><br />
						<strong>Thể loại: </strong><br />
						
						<% if @product.categories.any? %>
							<% @product.categories.each do |category| %>
								<p class = "text-indent"><%= category.name %></p>
							<% end %>
							<% else %>
							<p class = "text-indent">Không có thể loại</p>
							<% end %>
			    	</div>
					<div><%= button_to line_items_path(product_id: @product),remote: true, :class => "btn btn-default add_cart"  do %><span class="glyphicon glyphicon-shopping-cart"></span> Thêm vào giỏ hàng
				    <% end %>
				   </div>
			    </td>
			  </tr>	      
		    </tbody>
		</table>

	<%= link_to 'Edit', edit_product_path(@product) %> |
	<%= link_to 'Back', products_path %>
		
	</div>
	
</div>
<div class="row tb-product">
	
	<table class="table  ">
		<thead>
			<tr>
			   	<td>
			   		<h3>Thông tin sản phẩm: <%= @product.title %></h3>
			   	</td>
			</tr>
		</thead>
		<tbody>
		    <tr >
		      	<td>
		        	<div class="productdes"><p class = "text-indent"><%= @product.description %></p>
			    	</div>					
			    </td>
			</tr>	      
		</tbody>
	</table>
</div>
</div>
<div class="col-sm-3">
	<h3>Sản phẩm cùng loại</h3>
<% if @products.present? %> 
   <% @products.each do |product| %>

          <div class="text-left producttype">
            <%= link_to product do%>
            <%= image_tag(product.upload_image, class:'thumbnail') %>
            <% end %>
            <div class = "product-title">
              <h4><%= product.title %></h4>
            </div>
            <div class = "product-des">
              <dd><%= truncate(strip_tags(product.description), length: 80) %></dd>
            </div>
            <div class="price_line">
              <!-- <span class="price"><%= product.price %></span> -->
              <span class="price"><%= number_to_currency(product.price) %></span>
              </div>
              <div>
              <%= button_to 'Thêm vào giỏ hàng', line_items_path(product_id: product),remote: true, :class => "btn btn-default add_cart" %>
            </div>
          </div>
        
    <% end %>
<% else %>
	<p>Không có sản phẩm cùng loại</p>
	<%= image_tag('/assets/cart-blank.png', class:'thumbnail') %>
<% end %>
</div>

</div>